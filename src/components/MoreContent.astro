---
import { getCollection } from "astro:content";
import Link from "./Link.astro";
import PostCard from "./PostCard.astro";

const blogPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const projectPosts = (await getCollection('projects')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Get random posts
const randomProject = projectPosts[Math.floor(Math.random() * projectPosts.length)];
const randomPost = blogPosts[Math.floor(Math.random() * blogPosts.length)];
---

<div class="grid lg:grid-cols-2 gap-8 md:gap-16 mb-12">
  <section class="group">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Recent Project</h2>
      <Link href="/projects" class="text-[0.9375rem] hover:text-cyan-700 dark:hover:text-cyan-300 transition-colors duration-300">
        View all projects →
      </Link>
    </div>
    <PostCard post={randomProject} baseUrl="/projects/" variant="default" color={randomProject.data.color} />
  </section>

  <section class="group">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Recent Blog Post</h2>
      <Link href="/tech-blog" class="text-[0.9375rem] hover:text-cyan-700 dark:hover:text-cyan-300 transition-colors duration-300">
        Read more posts →
      </Link>
    </div>
    <PostCard post={randomPost} baseUrl="/tech-blog/" variant="default" color={randomPost.data.color} />
  </section>
</div>