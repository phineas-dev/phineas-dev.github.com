---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import BlendedImage from './BlendedImage.astro';

type Props = {
  title: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  slug: string;
};

const { title, pubDate, updatedDate, author, slug } = Astro.props;
---

<div class="title mb-4 py-2 leading-none">
  <h1 class="text-5xl m-0 mb-6">{title}</h1>
  <div class="mb-8 text-gray-500">
    <div class="flex items-center gap-2">
      <span>By {author}</span>
      <span class="text-gray-300 dark:text-gray-700">â€¢</span>
      <FormattedDate date={pubDate} />
    </div>
    {
      updatedDate && (
        <div class="italic mt-1">
          Last updated on <FormattedDate date={updatedDate} />
        </div>
      )
    }
  </div>
  <div class="relative mb-8">
    <BlendedImage 
      slug={slug}
      title={title}
      aspectRatio={26}
      rounded={true}
      overlay={false}              
    />
  </div>
</div>
