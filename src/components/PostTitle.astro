---
import FormattedDate from './FormattedDate.astro';
import BlendedImage from './BlendedImage.astro';

type Props = {
  title: string;
  subtitle: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  slug: string;
  color: string;
};

const { title, subtitle, pubDate, updatedDate, author, slug, color } =
  Astro.props;
---

<div class="title mb-4 pb-2 leading-none">
  <h1 class="text-5xl m-0 mb-2">{title}</h1>
  {subtitle && (
    <h2 class="text-2xl text-gray-600 dark:text-gray-400 font-normal mb-6">{subtitle}</h2>
  )}
  <div class="mb-8 text-gray-500">
    <div class="flex items-center gap-2">
      <span>By {author}</span>
      <span class="text-gray-300 dark:text-gray-700">â€¢</span>
      <FormattedDate date={pubDate} />
    </div>
    {
      updatedDate && (
        <div class="italic mt-1">
          Last updated on <FormattedDate date={updatedDate} />
        </div>
      )
    }
  </div>
  <BlendedImage 
    slug={slug}
    title={title}
    aspectRatio={26}
    rounded={true}
    overlay={false}              
  />
  <div class="color-accent h-8 mb-8 rounded-b-lg opacity-50" style={`background: ${color}`}></div>
  <slot />
</div>
