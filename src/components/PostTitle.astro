---
import FormattedDate from './FormattedDate.astro';
import TechIcon from './TechIcon.astro';

type Props = {
  title: string;
  subtitle: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  slug: string;
  color: string;
};

const { title, subtitle, pubDate, updatedDate, author, slug, color } =
  Astro.props;
---

<div class="title pb-2 pt-4 leading-none">
  <div class="flex items-center mb-4">
    <TechIcon color={color} class="h-24 w-24 mr-2" />
    <div class="flex flex-col justify-center flex-1">
      <h1 class="text-heading-1 m-0 mb-2">{title}</h1>
      {subtitle && (
        <h2 class="heading-2 text-gray-600 dark:text-gray-400 font-normal">{subtitle}</h2>
      )}
    </div>
  </div>
  <div class="mb-2 text-gray-500">
    <div class="flex items-center gap-2">
      <span>By {author}</span>
      <span class="text-gray-300 dark:text-gray-700">â€¢</span>
      <FormattedDate date={pubDate} />
    </div>
    {
      updatedDate && (
        <div class="italic mt-1">
          Last updated on <FormattedDate date={updatedDate} />
        </div>
      )
    }
  </div>
  <slot />
</div>
