---
const { slot } = Astro.props;
---

<div class="prose dark:prose-invert">
  <slot />
</div>

<style>
  .prose :global(p) {
    margin: 1.5rem 0;
    line-height: 1.75;
    font-size: 1.125rem;
    @apply text-gray-700 dark:text-gray-300;
    letter-spacing: -0.011em;
  }

  .prose :global(h1) {
    font-size: 2.25rem;
    line-height: 1.3;
    font-weight: 700;
    margin: 3rem 0 2rem;
    @apply text-gray-900 dark:text-gray-100;
    letter-spacing: -0.025em;
  }

  .prose :global(h2) {
    font-size: 1.875rem;
    line-height: 1.4;
    font-weight: 600;
    margin: 2.5rem 0 1.5rem;
    @apply text-gray-800 dark:text-gray-200;
    letter-spacing: -0.025em;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    line-height: 1.5;
    font-weight: 600;
    margin: 2rem 0 1.25rem;
    @apply text-gray-700 dark:text-gray-300;
    letter-spacing: -0.02em;
  }

  .prose :global(h4) {
    font-size: 1.25rem;
    line-height: 1.6;
    font-weight: 600;
    margin: 1.75rem 0 1rem;
    @apply text-gray-600 dark:text-gray-400;
    letter-spacing: -0.015em;
  }

  .prose :global(ul), .prose :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.25rem;
  }

  .prose :global(ul) {
    list-style-type: none;
  }

  .prose :global(ul > li) {
    position: relative;
    padding-left: 1.75rem;
  }

  .prose :global(ul > li::before) {
    content: "";
    position: absolute;
    left: 0;
    top: 0.75rem;
    height: 0.375rem;
    width: 0.375rem;
    border-radius: 50%;
    @apply bg-gray-300 dark:bg-gray-600;
  }

  .prose :global(ol) {
    list-style-type: decimal;
    padding-left: 1.75rem;
  }

  .prose :global(li) {
    margin: 0.75rem 0;
    line-height: 1.7;
    font-size: 1.125rem;
    @apply text-gray-700 dark:text-gray-300;
  }

  .prose :global(blockquote) {
    margin: 2rem 0;
    padding: 1.25rem 1.5rem;
    @apply border-l-4 border-indigo-500 dark:border-indigo-400
           bg-gray-50 dark:bg-gray-900/50
           text-gray-600 dark:text-gray-400;
    border-radius: 0.375rem;
    font-style: italic;
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .prose :global(pre) {
    margin: 2rem 0;
    padding: 1.25rem 1.5rem;
    @apply bg-gray-50 dark:bg-gray-900
           text-gray-800 dark:text-gray-200
           border border-gray-200 dark:border-gray-700;
    border-radius: 0.5rem;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .prose :global(pre code) {
    padding: 0;
    background: none;
    border-radius: 0;
    font-size: inherit;
    font-family: inherit;
    line-height: inherit;
    color: inherit;
  }

  .prose :global(code):not(:global(pre) :global(code)) {
    @apply bg-gray-100 dark:bg-gray-800
           text-gray-800 dark:text-gray-200;
    padding: 0.2em 0.4em;
    border-radius: 0.25em;
    font-size: 0.875em;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  }

  .prose :global(a) {
    @apply text-indigo-600 dark:text-indigo-400;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.15s ease-in-out;
    border-bottom: 1px solid transparent;
  }

  .prose :global(a:hover) {
    border-bottom-color: currentColor;
  }

  .prose :global(hr) {
    margin: 3rem 0;
    border: 0;
    height: 1px;
    @apply bg-gradient-to-r from-gray-200 via-gray-400 to-gray-200
           dark:from-gray-700 dark:via-gray-600 dark:to-gray-700;
  }

  .prose :global(img) {
    margin: 2rem 0;
    border-radius: 0.75rem;
    @apply shadow-md dark:shadow-lg;
    width: 100%;
    height: auto;
  }

  .prose :global(strong) {
    font-weight: 600;
    @apply text-gray-800 dark:text-gray-100;
  }

  .prose :global(table) {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .prose :global(th) {
    font-weight: 600;
    text-align: left;
    padding: 0.75rem;
    @apply border-b-2 border-gray-200 dark:border-gray-700
           text-gray-800 dark:text-gray-100;
  }

  .prose :global(td) {
    padding: 0.75rem;
    @apply border-b border-gray-200 dark:border-gray-700
           text-gray-700 dark:text-gray-300;
  }

  .prose :global(figure) {
    margin: 2rem 0;
  }

  .prose :global(figcaption) {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    @apply text-gray-500 dark:text-gray-400;
    text-align: center;
  }
</style>
