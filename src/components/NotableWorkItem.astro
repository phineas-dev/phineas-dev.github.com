---
import type { HTMLAttributes } from 'astro/types';

interface Props {
  imageProps: HTMLAttributes<'img'>;
  title: string;
  href: string;
}

const { imageProps, title, href } = Astro.props;
---

<a href={href} target="_blank" class="group block rounded-lg p-4 md:p-6 h-full bg-gray-50/50 dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800">
  <div class="relative h-30 mb-4 overflow-hidden rounded-md flex items-center justify-center">
    <img 
      {...imageProps} 
      class="w-full h-full object-contain transition-transform duration-300 group-hover:scale-105" 
      alt={`${title} project screenshot`}
      loading="lazy"
    />
  </div>
  <h3 class="heading-3 mb-2 text-gray-700 dark:text-gray-100 group-hover:text-cyan-600 dark:group-hover:text-cyan-300 transition-all duration-300">
    {title}
  </h3>
  <div class="text-content-small text-gray-500 dark:text-gray-400 line-clamp-3">
    <slot />
  </div>
</a>