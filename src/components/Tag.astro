---
interface Props {
  tag: string;
  baseUrl: string;
}

const { tag, baseUrl } = Astro.props;
---

<a
  href={`${baseUrl}tag/${encodeURIComponent(tag)}`}
  class="text-xs px-1.5 py-[1px] rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 transition-colors no-underline whitespace-nowrap"
>
  {tag}
</a>
