---
interface Props {
  type?: 'tech' | 'achievement';
}

const { type = 'tech' } = Astro.props;

const styles = {
  tech: 'text-cyan-700 dark:text-cyan-400 font-medium',
  achievement: 'text-emerald-700 dark:text-emerald-400 font-medium'
};
---

<span class={`${styles[type]} inline-block decoration-2 underline-offset-2 transition-all`}>
  <slot />
</span>
