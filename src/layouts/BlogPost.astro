---
import PostLayout from './PostLayout.astro';
import type { Post } from '../content/types';

type Props = Post['data'] & {
  slug: string;
  prevPost: Post | null;
  nextPost: Post | null;
  sections:  Array<{
    id: string;
    title: string;
  }>;
};

const {
  title,
  description,
  author,
  pubDate,
  updatedDate,
  color,
  slug,
  tags,
  prevPost,
  nextPost,
  subtitle,
  sections
} = Astro.props;
---

<PostLayout
  title={title}
  description={description}
  author={author}
  pubDate={pubDate}
  updatedDate={updatedDate}  
  color={color}
  baseUrl="/tech-blog"
  backText="Tech Blog"
  slug={slug}
  tags={tags}
  prevPost={prevPost}
  nextPost={nextPost}
  subtitle={subtitle}
  sections={sections}
>
  <slot />
</PostLayout>
