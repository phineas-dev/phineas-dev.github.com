---
import PostLayout from './PostLayout.astro';
import type { Post } from '../content/types';

type Props = Post['data'] & {
  collection: string;
  slug: string;
  prevPost: Post | null;
  nextPost: Post | null;
  sections: Array<{
    id: string;
    title: string;
  }>;
};
---

<PostLayout
  baseUrl="/tech-blog"
  backText="Tech Blog"
  {...Astro.props}
>
  <slot />
</PostLayout>
