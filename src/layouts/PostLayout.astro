---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Link from '../components/Link.astro';
import Markdown from '../components/Markdown.astro';
import PostTitle from '../components/PostTitle.astro';
import PostNavigation from '../components/PostNavigation.astro';
import type { Post } from '../content/types';

type Props = Post['data'] & {
  slug: string;
  backLink: string;
  backText: string;
  prevPost: Post | null;
  nextPost: Post | null;
};

const { title, description, pubDate, updatedDate, slug, backLink, backText, prevPost, nextPost } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style is:global>
      .prose {
        padding: 1em;
      }
      .prose .title {
        margin-bottom: 1em;
        padding: 1em 0;
        line-height: 1;
      }
      .prose .title h1 {
        margin: 0 0 0.5em 0;
      }
      .prose pre {
        overflow-x: auto;
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: rgb(243 244 246);
        font-size: 0.875rem;
        line-height: 1.5;
        margin: 1.5rem 0;
      }
      :global(.dark) .prose pre {
        background-color: rgba(31, 41, 55, 0.5);
      }
      .prose pre code {
        background: none;
        padding: 0;
        font-size: inherit;
        color: inherit;
      }
    </style>
  </head>

  <body class="bg-white text-gray-950 dark:bg-black dark:text-gray-50">
    <Header />
    <main class="w-[720px] lg:w-[1024px] xl:w-[1280px] max-w-[calc(100%-2em)] mx-auto py-8 px-4 min-h-stretch">
      <Link href={backLink}>
        <h1 class="text-xl mb-6 inline-block">{backText}</h1>
      </Link>
      <PostNavigation prevPost={prevPost} nextPost={nextPost} baseUrl={backLink} />
      <article>
        <div class="prose container mx-auto p-4 text-gray-800 dark:text-gray-200">
          <PostTitle 
            title={title}
            pubDate={pubDate}
            updatedDate={updatedDate}
            slug={slug}
          />
          <Markdown>
            <slot />
          </Markdown>
          <PostNavigation prevPost={prevPost} nextPost={nextPost} baseUrl={backLink} />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
