---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = { title: string; description: string };

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-white text-gray-950 dark:bg-black dark:text-gray-50">
		<Header />
		<main class="w-[720px] lg:w-[1024px] xl:w-[1280px] max-w-[calc(100%-2em)] mx-auto py-12 px-4 min-h-stretch">
			<h1 class="text-3xl mb-6 text-gray-300 dark:text-gray-400">{title}</h1>
			<slot />
		</main>
		<Footer />
	</body>
</html>
