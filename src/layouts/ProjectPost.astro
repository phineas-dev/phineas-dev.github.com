---
import PostLayout from './PostLayout.astro';
import type { Post } from '../content/types';
import ScrollProgress from '../components/ScrollProgress.astro';

type Props = Post['data'] & {
  slug: string;
  prevPost: Post | null;
  nextPost: Post | null;
};

const {
  title,
  description,
  author,
  pubDate,
  updatedDate,
  color,
  slug,
  tags,
  prevPost,
  nextPost,
  subtitle,
} = Astro.props;
---

<PostLayout
  title={title}
  description={description}
  author={author}
  pubDate={pubDate}
  updatedDate={updatedDate}
  color={color}
  baseUrl="/projects"
  backText="Projects"
  slug={slug}
  tags={tags}
  prevPost={prevPost}
  nextPost={nextPost}
  subtitle={subtitle}
>
  <ScrollProgress />
  <slot />
</PostLayout>