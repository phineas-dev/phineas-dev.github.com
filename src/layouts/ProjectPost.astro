---
import PostLayout from './PostLayout.astro';
import type { Post } from '../content/types';
import ScrollProgress from '../components/ScrollProgress.astro';

type Props = Post['data'] & {
  collection: string;
  slug: string;
  prevPost: Post | null;
  nextPost: Post | null;
  sections: Array<{
    id: string;
    title: string;
  }>;
};
---

<PostLayout
  {...Astro.props}
  baseUrl="/projects"
  backText="Projects"
>
  <ScrollProgress />
  <slot />
</PostLayout>