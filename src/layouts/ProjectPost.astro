---
import type { CollectionEntry } from 'astro:content';
import Post from './Post.astro';

type Props = CollectionEntry<'projects'>['data'] & { slug: string };

const { title, description, pubDate, updatedDate, heroImage, color } =
  Astro.props;
---

<Post
  title={title}
  description={description}
  pubDate={pubDate}
  updatedDate={updatedDate}
  heroImage={heroImage}
  color={color}
  backLink="/projects"
  backText="Projects"
>
  <slot />
</Post>