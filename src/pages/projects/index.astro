---
import { getCollection } from 'astro:content';
import PostCard from '../../components/PostCard.astro';
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import TagFilter from '../../components/TagFilter.astro';

// Get all posts and sort by date
const allPosts = (await getCollection('projects')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Count posts per tag and only include tags with more than one post
const tagCounts = allPosts
  .flatMap((post) => post.data.tags)
  .reduce(
    (acc, tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
      return acc;
    },
    {} as Record<string, number>,
  );

const allTags = Object.entries(tagCounts)
  .map(([tag]) => tag)
  .sort();

const [featuredPost, ...otherPosts] = allPosts;
---

<DefaultLayout 
  title="Projects" 
  description="A showcase of my latest projects and work"
>

<section class="max-w-4xl mx-auto">
    <div class="mb-16">
      <div class="prose dark:prose-invert mb-12">
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          A curated portfolio of my technical projects showcasing expertise in frontend development, 
          user experience design, and software architecture.
        </p>
      </div>
    </div>

    <div class="mb-16">
      <h2 class="text-lg font-semibold mb-4 text-gray-500">Featured Post</h2>
      <PostCard post={featuredPost} baseUrl="/projects/" variant="featured" />
    </div>
    <div class="mb-8">
      <h2 class="text-lg font-semibold mb-4 text-gray-500">More Posts</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12 list-none m-0 p-0">
        {otherPosts.map((post) => (
            <PostCard post={post} baseUrl="/projects/" variant="compact" />
        ))}
      </div>
    </div>
  </section>
</DefaultLayout>
