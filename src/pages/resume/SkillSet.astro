---
interface Props {
  title: string;
  skills: string[];
}

const { title = '', skills = [] } = Astro.props;
---

<div class="mb-6">
  <h3 class="heading-3 mb-3 text-gray-900 dark:text-gray-100">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="px-3 py-1 text-sm bg-gray-50 dark:bg-gray-900 rounded-md leading-[inherit] text-gray-900 dark:text-gray-200 border border-gray-200 dark:border-gray-800">
        {skill}
      </span>
    ))}
  </div>
</div>
