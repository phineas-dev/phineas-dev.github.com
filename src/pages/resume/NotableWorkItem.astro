---
import type { HTMLAttributes } from 'astro/types';

interface Props {
  imageProps: HTMLAttributes<'img'>;
  title: string;
}

const { imageProps, title } = Astro.props;
---

<div class="h-full flex flex-col rounded-lg bg-gray-50 dark:bg-gray-800 p-6">
  <div class="relative h-30 mb-6 overflow-hidden rounded-md flex items-center justify-center p-4">
    <img 
      {...imageProps} 
      class="w-full h-full object-contain transition-transform duration-300" 
      alt={`${title} project screenshot`}
      loading="lazy"
    />
  </div>
  <h3 class="text-[1.3125rem] font-bold text-cyan-900 dark:text-cyan-100 tracking-tight leading-snug mb-3">
    {title}
  </h3>
  <div class="text-[1.0625rem] text-gray-900 dark:text-gray-200 leading-[1.75] tracking-[-0.01em]">
    <slot />
  </div>
</div>