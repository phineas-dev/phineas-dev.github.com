---
interface Props {
  company: string;
  role: string;
}

const { company, role } = Astro.props;
---

<div class="mb-1">
  <h3 class="text-[1.3125rem] font-bold text-cyan-900 dark:text-cyan-100 tracking-tight leading-snug transition-colors">
    {company}
  </h3>
  <p class="text-[1.125rem] font-medium text-gray-800 dark:text-gray-300 tracking-[-0.01em] transition-colors">
    {role}
  </p>
</div>
