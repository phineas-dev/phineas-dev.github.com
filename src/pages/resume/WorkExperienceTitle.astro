---
interface Props {
  company: string;
  role: string;
}

const { company, role } = Astro.props;
---

<div class="mb-1">
  <h3 class="text-[1.3125rem] font-bold text-gray-900 dark:text-gray-100 tracking-tight leading-snug group-hover:text-cyan-900 dark:group-hover:text-cyan-100 transition-colors">
    {company}
  </h3>
  <p class="text-[1.125rem] font-medium text-gray-600 dark:text-gray-400 tracking-[-0.01em] group-hover:text-gray-800 dark:group-hover:text-gray-300 transition-colors">
    {role}
  </p>
</div>
