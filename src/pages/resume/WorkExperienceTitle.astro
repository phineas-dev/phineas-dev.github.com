---
interface Props {
  company: string;
  role: string;
}

const { company, role } = Astro.props;
---

<div class="mb-1">
  <h3 class="heading-3 text-cyan-900 dark:text-cyan-100">
    {company}
  </h3>
  <p class="text-[1.125rem] font-medium text-gray-800 dark:text-gray-300 tracking-[-0.01em]">
    {role}
  </p>
</div>
