---
import Section from '../../components/Section.astro';
import SkillSet from './SkillSet.astro';

const skillSets = [
  {
    title: 'Full-Stack Development',
    skills: [
      'React',
      'Next.js',
      'TypeScript',
      'JavaScript',
      'HTML',
      'CSS',
      'Tailwind',
      'Node.js',
      'GraphQL',
      'REST APIs',
    ],
  },
  {
    title: 'Design & UX',
    skills: [
      'UI/UX Design',
      'Figma',
      'Design Systems',
      'Responsive Design',
      'Animation',
    ],
  },
  {
    title: 'Mobile & Cross-Platform',
    skills: [
      'React Native',
      'TV App Development',
      'Cross-browser Compatibility',
    ],
  },
  {
    title: 'Testing & Quality',
    skills: [
      'Jest',
      'React Testing Library',
      'Storybook',
      'CI/CD',
      'Code Review',
    ],
  },
  {
    title: 'Development Practices',
    skills: ['Agile/Scrum', 'Git', 'Code Review', 'Documentation', 'Mentoring'],
  },
];
---

<Section title="Skills">
  <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8 px-4">
    {skillSets.map((skillSet) => (
      <SkillSet title={skillSet.title} skills={skillSet.skills} />
    ))}
  </div>
</Section>
